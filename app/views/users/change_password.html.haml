- content_for :page_title, t("users.change_password.title")

%h1
  = t("users.change_password.title")

= form_for :user do |form|
  = error_messages_for @user

  %fieldset
    %legend
      = t "users.change_password.section.title"

    %ul
      %li
        = form.label :current_password
        = form.text_field :current_password
      %li
        = form.label :password
        = form.text_field :password
      %li
        = form.label :password_confirmation
        = form.text_field :password_confirmation

    = buttons_bar do
      = button_ok
      = button_cancel
